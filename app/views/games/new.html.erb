<h1>New game</h1>

<p><%= @letters %></p>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag("grid", value = @letters) %>
  <label for="word">What is the longest word you can find?</label>
  <input type="text" class="form-control" id="word" name="input">
  <input type="submit" value="Play" class="btn btn-light">
</form>
